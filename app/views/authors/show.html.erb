<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @author.name %>
</p>

<p>
  <strong>Country:</strong>
  <%= @author.country %>
</p>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @author.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_author_path(@author), class: "btn btn-primary btn-lg active" %> |
<%= link_to 'Back', authors_path, class: "btn btn-primary btn-lg active" %>
