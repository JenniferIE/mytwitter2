<h1>New Book</h1>

<p><%= link_to "Back to list of books", books_path %></p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for (@book) do |f|%>
        <%= render 'shared/error_messages', object: f.object %>
          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :author %>
          <%= f.text_field :author %>

          <%= f.label :isbn %>
          <%= f.text_field :isbn %>

          <%= f.label :year %>
          <%= f.text_field :year %>

         <%= f.label :genre %>
        <%= f.collection_radio_buttons(:genre_id, Genre.all.order(:name), :id, :name, {}, {:class => "bar"} ) %>

  <br><br>
  <%= f.submit "Create new book", class: "btn btn-large btn-primary"%>
<% end %>
  </div>
</div>
