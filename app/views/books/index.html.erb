<% flash.each do |name, msg| -%>
 <%= content_tag :div, msg, class: name %>
<% end %>


<h1>Listing Books</h1>
<p>Book count: <%= @books.count %></p>
<table style="width: 100%" class="table table-condensed">
  
    <tr>
      <th>Title</th>
      <th>Author</th>
<!--       <th>Isbn</th>
      <th>Year</th>
      <th colspan="3"></th> -->
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>

        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'New Book', new_book_path , class: "btn btn-primary btn-lg active" %>
