<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @genre.name %>
</p>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genre.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_genre_path(@genre) , class: "btn btn-primary btn-lg active"%> |
<%= link_to 'Back', genres_path , class: "btn btn-primary btn-lg active" %>
